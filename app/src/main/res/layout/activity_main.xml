<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <!-- Cabeçalho (inalterado) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200ee"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:text="☰"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Leitor Q&amp;A"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Área principal do cartão -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <!-- Layout de conteúdo principal com camadas sobrepostas -->
            <RelativeLayout
                android:id="@+id/main_content_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <!-- 1ª Camada: Conteúdo de texto (selecionável) -->
                <ScrollView
                    android:id="@+id/text_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/card_footer"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/question_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textIsSelectable="true"
                            android:textColor="#000000"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <TextView
                            android:id="@+id/answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f9f9f9"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:textIsSelectable="true"
                            android:textColor="#000000"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </LinearLayout>
                </ScrollView>

                <!-- 2ª Camada: Overlay de toque transparente -->
                <View
                    android:id="@+id/touch_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/card_footer"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Rodapé (inalterado) -->
                <LinearLayout
                    android:id="@+id/card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prev_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#6200ee"
                        android:text="◄"
                        android:textColor="#fff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/current_card_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:cursorVisible="false"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:minWidth="30dp"
                            android:text="1"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/total_cards_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ 0"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/next_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#6200ee"
                        android:text="►"
                        android:textColor="#fff" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Menu lateral (inalterado) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:elevation="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ... (conteúdo do menu IDÊNTICO ao original) ... -->
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Mensagem de processamento (inalterada) -->
    <TextView
        android:id="@+id/processing_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:elevation="10dp"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        tools:text="Processando PDF..." />
</RelativeLayout>
